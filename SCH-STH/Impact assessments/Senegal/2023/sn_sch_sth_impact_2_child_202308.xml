      <bind nodeset="/data/p_connait_bilh" relevant=" /data/p_consent  = 'A.donne'" required="true()" type="select1"/>
      <bind nodeset="/data/p_manif_bilh" relevant=" /data/p_consent  = 'A.donne' and  /data/p_connait_bilh  = 'Oui'" required="true()" type="select1"/>
      <bind nodeset="/data/p_pisse_sang_1_fois" relevant=" /data/p_consent  = 'A.donne'" required="true()" type="select1"/>
